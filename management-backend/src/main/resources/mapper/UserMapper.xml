<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ean.gundam.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.ean.gundam.model.domain.User">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
            <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        email,phone,status,
        avatar,deleted
    </sql>
    <select id="userLogin" resultType="com.ean.gundam.model.domain.User">
        select * from tb_user where username = #{username} and password = #{password}
    </select>

    <select id="getAllUser" resultType="com.ean.gundam.model.domain.User">
        select username,password,email,phone,status,avatar from tb_user
    </select>

</mapper>
